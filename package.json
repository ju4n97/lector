{
	"name": "@lector/monorepo",
	"type": "module",
	"private": true,
	"workspaces": ["packages/*"],
	"scripts": {
		"dev:play": "bun run --filter @lector/playground dev",
		"dev:browser": "bun run --filter @lector/browser-ext dev",
		"test": "bun test .",
		"test:watch": "bun test --watch .",
		"lint": "biome lint --write .",
		"format": "biome format --write .",
		"ci:version": "changeset version && bun run ./scripts/sync-jsr.ts",
		"ci:release": "changeset tag",
		"taze": "taze -Ir"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@changesets/cli": "^2.27.8",
		"@types/bun": "latest",
		"lefthook": "^1.7.15",
		"taze": "^0.16.7"
	},
	"peerDependencies": {
		"typescript": "^5.6.2"
	},
	"packageManager": "bun@1.1.27",
	"trustedDependencies": ["@biomejs/biome", "lefthook"]
}
